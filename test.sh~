#!/bin/tcsh
unset noclobber

let TOLERANCE = `$FPATH/setArg.sh tolerance 1 $argv`
set CHANGEM = 3

# Determine quality of fix, and error point
let CURRENTSUM = `$FPATH/sumM.sh $CHANGEM "$CHANGEPATH/standardComparisons.fin"`
echo "Current CHI2DOF total: $CURRENTSUM - Tolerance: $TOLERANCE"
if ($CURRENTSUM < $TOLERANCE) then
	echo "this worked"
	exit
end
